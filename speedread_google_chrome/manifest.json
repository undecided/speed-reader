{
  "manifest_version": 3,
  "name": "Speed Reader",
  "description": "Simple speed reader extension",
  "version": "1.0",
  "action": {
    "default_icon": "speedreader_icon.png"
  },
  "icons": {
    "64": "speedreader_icon.png"
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  }
}
